{
  "manifest_version": 3,
  "name": "Minha Extensão",
  "version": "1.0",
  "description": "Extensão do Chrome para capturar áudio de reuniões, transcrever e gerar resumos automáticos.",
   "permissions": ["storage", "activeTab", "scripting", "microphone"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/icons/icon16.png",
      "48": "src/icons/icon48.png",
      "128": "src/icons/icon128.png"
    }
  }
}
