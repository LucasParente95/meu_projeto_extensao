{
    "manifest_version": 3,
    "name": "Resumo de Vídeos",
    "version": "1.0",
    "description": "Uma extensão que gera resumos automáticos de vídeos a partir de suas transcrições.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "imgs/icon16.png",
            "48": "imgs/icon48.png",
            "128": "imgs/icon128.png"
        }
    },
    "permissions": ["storage", "activeTab"]
}
